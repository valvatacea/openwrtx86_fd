# Target
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y

# Filesystem / USB
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-uas=y
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_e2fsprogs=y
# resize tool
CONFIG_PACKAGE_resize2fs=y

# LuCI (opsional)
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# Networking essentials
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_ppp-mod-pppoe=y
CONFIG_PACKAGE_dnsmasq-full=y

# SSH
CONFIG_PACKAGE_dropbear=y

# Common utilities
CONFIG_PACKAGE_openssh-sftp-server=n
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_git=y

# Scripting & runtime
CONFIG_PACKAGE_python3=y
CONFIG_PACKAGE_python3-pip=y
CONFIG_PACKAGE_php7=y
CONFIG_PACKAGE_php7-cgi=y
CONFIG_PACKAGE_php7-mod-json=y
CONFIG_PACKAGE_php7-mod-mysqli=y

# Database
CONFIG_PACKAGE_mariadb-server=y
CONFIG_PACKAGE_mariadb-client=y

# OpenClash / Passwall (tergantung feed/packages availability)
# Jika menggunakan packages dari feeds/community, jangan lupa enable feed dan install
# contoh lines (bila tersedia pada feeds):
CONFIG_PACKAGE-openclash=y
CONFIG_PACKAGE-passwall=y

# Desktop (opsional, ringan)
# NOTE: openwrt x86 bukan full desktop environment, tapi kita bisa tambahkan lxde minimal
# dan Xorg jika benar-benar diperlukan. Disarankan gunakan chroot/rootfs lain untuk GUI.

# Misc
CONFIG_TARGET_VARIANT_PACKAGES=""

# End
