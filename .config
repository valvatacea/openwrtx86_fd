############################################
# Target System
############################################
CONFIG_TARGET_x86=y                 # Sistem x86
CONFIG_TARGET_x86_64=y              # Sistem 64-bit
CONFIG_TARGET_x86_64_DEVICE_generic=y # Device generic x86_64

############################################
# Base packages
############################################
CONFIG_PACKAGE_luci=y                # Web interface LuCI full
CONFIG_PACKAGE_luci-app-statistics=y # Statistik LuCI
CONFIG_PACKAGE_luci-theme-alpha=y    # Tema Alpha untuk LuCI
CONFIG_PACKAGE_dnsmasq-full=y        # DNSMASQ full (DHCP, DNS, DHCPv6, etc.)
CONFIG_PACKAGE_ipset=y               # Paket ipset
CONFIG_PACKAGE_ip-full=y             # Paket ip lengkap (iproute2)
CONFIG_PACKAGE_kmod-tun=y            # Kernel module TUN/TAP untuk VPN
CONFIG_PACKAGE_kmod-usb-net-rndis=y  # Support RNDIS (USB tethering)
CONFIG_PACKAGE_wget=y                # Utilitas wget
CONFIG_PACKAGE_curl=y                # Utilitas curl
CONFIG_PACKAGE_openssh-server=y      # Server SSH

############################################
# Networking & VPN
############################################
CONFIG_PACKAGE_luci-app-openclash=y  # OpenClash LuCI
CONFIG_PACKAGE_luci-app-passwall=y   # Passwall LuCI
CONFIG_PACKAGE_chinadns-ng=y         # Paket Passwall: chinadns-ng
CONFIG_PACKAGE_dns2socks=y           # Paket Passwall: dns2socks
CONFIG_PACKAGE_geoview=y             # Paket Passwall: geoview
CONFIG_PACKAGE_hysteria=y            # Paket Passwall: hysteria
CONFIG_PACKAGE_ipt2socks=y           # Paket Passwall: ipt2socks
CONFIG_PACKAGE_naiveproxy=y          # Paket Passwall: naiveproxy
CONFIG_PACKAGE_shadow-tls=y          # Paket Passwall: shadow-tls
CONFIG_PACKAGE_shadowsocks-libev=y   # Paket Passwall: shadowsocks-libev
CONFIG_PACKAGE_shadowsocks-rust=y    # Paket Passwall: shadowsocks-rust
CONFIG_PACKAGE_shadowsocksr-libev=y  # Paket Passwall: shadowsocksr-libev
CONFIG_PACKAGE_simple-obfs=y         # Paket Passwall: simple-obfs
CONFIG_PACKAGE_sing-box=y            # Paket Passwall: sing-box
CONFIG_PACKAGE_tcping=y              # Paket Passwall: tcping
CONFIG_PACKAGE_trojan-plus=y         # Paket Passwall: trojan-plus
CONFIG_PACKAGE_tuic-client=y         # Paket Passwall: tuic-client
CONFIG_PACKAGE_v2ray-geodata=y       # Paket Passwall: v2ray-geodata
CONFIG_PACKAGE_v2ray-plugin=y        # Paket Passwall: v2ray-plugin
CONFIG_PACKAGE_xray-core=y           # Paket Passwall: xray-core
CONFIG_PACKAGE_xray-plugin=y         # Paket Passwall: xray-plugin

############################################
# System tools
############################################
CONFIG_PACKAGE_block-mount=y         # Manajemen block devices
CONFIG_PACKAGE_fdisk=y               # Utilitas fdisk
CONFIG_PACKAGE_parted=y              # Utilitas parted
CONFIG_PACKAGE_e2fsprogs=y           # Utilitas ext2/3/4 filesystem

############################################
# Auto resize rootfs init script
############################################
CONFIG_PACKAGE_resize-rootfs=y       # Script resize rootfs saat boot

############################################
# Enable all feeds
############################################
CONFIG_ALL=y                         # Pastikan semua feed tersedia